<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

      <record id="google_contact_user_sync_view_form" model="ir.ui.view">
          <field name="name">users.google.contact.sync</field>
          <field name="model">res.users</field>
          <field name="inherit_id" ref="base.view_users_form"/>
          <field name="arch" type="xml">
              <notebook colspan="4" position="inside">
                  <page string="Google Contacts">
                      <group>
                          <field name="google_contacts_rtoken"/>
                          <field name="google_contacts_token"/>
                          <field name="google_contacts_token_validity"/>
                          <field name="google_contacts_last_sync_date"/>
                          <button type="object" name="g_con_sync" string="Sync User"/>
                      </group>
                  </page>
              </notebook>
          </field>
      </record>

  </data>
</openerp>